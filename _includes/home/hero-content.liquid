<div class="hero__content hero__content--{{ page.page_id }}">

    <div class="hero__container">
        <div class="container">

            <div class="hero__cols">

                <div class="hero__col hero__col--left">

                    <div class="hero__content-wrapper">
                        <h1 class="hero__heading">
                            {{ page.hero.heading }}
                        </h1>

                        <div class="hero__text">
                            {{ page.hero.text | markdownify }}
                        </div>
                    </div>

                    <div class="hero__cta-section">
                        {%- for item in page.hero.cta -%}
                            <div class="hero__cta-item hero__cta-item--{{ item.glow_in }}">
                                <a href="{{ item.url }}" class="hero__cta-link hero__cta-link--{{ item.glow_in }}">
                                    {{ item.text }}
                                </a>
                            </div>
                        {%- endfor -%}
                    </div>

                </div>

                <div class="hero__col hero__col--right">
                  <div class="hero__slider slick-fade opacity">
                      {% for slides in site.data.sliders.home %}
                      <div class="hero__slider-content paths">
                          <div class="hero__aside flicker ">
                            <div class="hero__aside-text">
                               {{ slides.testimonial | markdownify }}
                        </div>
                              <h2 class="hero__aside-heading">
                                    {{ slides.industry }}
                              </h2>
                    </div>
                      <img src="{{- slides.image.path -}}"/>
                    </div>
                      {%- endfor -%}
                  </div>


                  <div class="hero__cta-section hero__cta-section--mobile">
                       {%- for item in page.hero.cta -%}
                           <div class="hero__cta-item hero__cta-item--{{ item.glow_in }}">
                               <a href="{{ item.url }}" class="hero__cta-link hero__cta-link--{{ item.glow_in }}">
                                   {{ item.text }}
                               </a>
                           </div>
                       {%- endfor -%}
                   </div>

                </div>

            </div>

        </div>
    </div>

</div>
